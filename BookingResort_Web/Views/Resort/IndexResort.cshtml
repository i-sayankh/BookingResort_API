@model IEnumerable<BookingResort_Web.Models.DTO.ResortDTO>
<br />
<div class="container p-4 border">
    <div class="row pb-2">
        <div class="col">
            <h1 class="text-primary">Resort List</h1>
        </div>
        <div class="col text-end pt-1">
            <a asp-controller="Resort" asp-action="CreateResort" class="btn btn-outline-primary">
                <i class="bi bi-plus-circle"></i>
                Create New Resort
            </a>
        </div>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>
                    Name
                </th>
                <th>
                    Occupancy
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Occupancy</td>
                    <td>@((item.Rate).ToString("c"))</td>
                    <td>
                        <a asp-controller="Resort" asp-action="UpdateResort" asp-route-resortId="@item.Id" class="btn btn-outline-success">
                            <i class="bi bi-pencil-square"></i>
                        </a>
                        <a asp-controller="Resort" asp-action="DeleteResort" asp-route-resortId="@item.Id" class="btn btn-outline-danger">
                            <i class="bi bi-trash-fill"></i>
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>